@model CategoryListModel
@{
    ViewBag.Title = "Danh Sách Nhóm Sản Phẩm";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel-heading">
            Điều kiện lọc
        </div>
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Tên loại</label>
                            @Html.TextBoxFor(model => model.SearchCategoryName, new {@class = "form-control"})
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <button id="btnFilter" class="btn btn-primary">Tìm kiếm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Mô Tả</th>
                            </tr>
                        </thead>
                       
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<script type="text/javascript">
    $(document).ready(function() {
        var table = $('#dataTables').DataTable({
            "ajax": {
                "url": '@Url.Action("List", "Category")',
                "type": "POST",
                "data": function (d){ 
                    d.SearchCategoryName = $("#SearchCategoryName").val();
                }
            },
            "language": {
                "url": "http://cdn.datatables.net/plug-ins/1.10.6/i18n/Vietnamese.json"
            },
            "ordering": false,
            "processing": true,
            "serverSide": true,
            "filter": false,
            "columns": [
                { "data": "Name", "width" : 300 },
                { "data": "Description" },
            ],
            "columnDefs": [
                 {
                     "render": function (data, type, row) {
                         return '<a href="@Url.Action("Edit" ,"Category")/' + row["Id"] + '">' + data + '</a>';
                     },
                     "targets": 0
                 }
            ]
        });
        $('#btnFilter').click(function () {
            table.ajax.reload();
        });
    });
</script>