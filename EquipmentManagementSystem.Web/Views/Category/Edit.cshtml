@model CategoryModel

@{
    ViewBag.Title = "Thay Đổi Thông Tin Loại Sản Phẩm";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
@using (Html.BeginForm(null, null, FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Thổng tin loại sản phẩm (@Html.ActionLink("về danh sách", "List"))
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.Partial("_CreateOrUpdate", Model)
                            <input type="submit" name="save" class="btn btn-primary" value="Lưu thay đổi" />
                            <input type="submit" name="save-continue" class="btn btn-primary" value="Lưu và tiếp tục"/>
                            <span id="category-delete" class="btn btn-default">Xóa</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>


}

@Html.DeleteConfirmation("category-delete")
