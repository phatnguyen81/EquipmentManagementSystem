@model ProductListModel
@{
    ViewBag.Title = "Danh Sách Sản Phẩm";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel-heading">
            Điều kiện lọc
        </div>
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Từ khóa</label>
                            @Html.TextBoxFor(model => model.SearchKeyword, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Loại sản phẩm</label>
                            @Html.DropDownListFor(model => model.SearchCategoryId, Model.AvailableCategories, "--- Tất cả ---", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <button id="btnFilter" class="btn btn-primary">Tìm kiếm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables">
                        <thead>
                        <tr>
                            <th>Sku</th>
                            <th>Tên</th>
                            <th>Loại</th>
                        </tr>
                        </thead>
                       
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<script type="text/javascript">
    $(document).ready(function() {
        var table = $('#dataTables').DataTable({
            "ajax": {
                "url": '@Url.Action("List", "Product")',
                "type": "POST",
                "data": function (d) {
                    d.SearchKeyword = $("#SearchKeyword").val();
                    d.SearchCategoryId = $("#SearchCategoryId").val();
                }
            },
            "language": {
                "url": "http://cdn.datatables.net/plug-ins/1.10.6/i18n/Vietnamese.json"
            },
            "ordering": false,
            "processing": true,
            "serverSide": true,
            "filter": false,
            "columns": [
                { "data": "Sku", "width": 100 },
                { "data": "Name" },
                { "data": "CategoryName",  "width": 300}
            ],
            "columnDefs": [
                 {
                     "render": function (data, type, row) {
                         return '<a href="@Url.Action("Edit" ,"Product")/' + row["Id"] + '">' + data + '</a>';
                     },
                     "targets": 0
                 }
            ]
        });
        $('#btnFilter').click(function () {
            table.ajax.reload();
        });
    });
</script>