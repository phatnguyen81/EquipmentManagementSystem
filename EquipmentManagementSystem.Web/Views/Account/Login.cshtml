@model LoginModel
@{
    Layout = "~/Views/Shared/_Login.cshtml";
    ViewBag.Title = "Log in";
}
@using(Html.BeginForm())
{
    <fieldset>
        <div class="form-group">
            @Html.ValidationSummary(false)
        </div>
        <div class="form-group">
            @*<input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>*@
            @Html.TextBoxFor(model => model.Username, new {@class = "form-control", placeholder = "Tên đăng nhập", @autofocus = "true"})
            @Html.ValidationMessageFor(model => model.Username)
        </div>
        <div class="form-group">
            @Html.PasswordFor(model => model.Password, new {@class = "form-control", placeholder = "Mật khẩu"})
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(model => model.RememberMe) Tự động đăng nhập lần sau?
            </label>
        </div>
        <!-- Change this to a button or input when using this as a form -->
        <button class="btn btn-lg btn-success btn-block">Đăng nhập</button>
    </fieldset>
}
